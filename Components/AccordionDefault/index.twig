<flynt-component load:on="visible" name="AccordionDefault" class="boxed" id="artistCurriculum">
  <div class="wrapper boxed max-w-screen-xl mx-auto">
    {% if preContent %}
      <h2 class="max-w-screen-lg mx-auto mb-md md:mb-xl flex justify-center items-center text-center uppercase">
        {{ preContent}}
      </h2>
    {% endif %}
    <div class="content">
      <div class="accordion">
        {% for panel in accordionPanels %}
          <div x-cloak x-data="{ open: false }" class="panel">
            <button @click="open = !open" class="panel-trigger font-body p-xs" type="button">
              {{ panel.panelTitle|e }}
              <div :class="{'rotate-0': open}" class="-rotate-90 px-xs">
                <svg width="16" height="29" viewBox="0 0 16 29" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.29289 28.7071C7.68342 29.0976 8.31658 29.0976 8.70711 28.7071L15.0711 22.3431C15.4616 21.9526 15.4616 21.3195 15.0711 20.9289C14.6805 20.5384 14.0474 20.5384 13.6569 20.9289L8 26.5858L2.34314 20.9289C1.95262 20.5384 1.31946 20.5384 0.928931 20.9289C0.538407 21.3195 0.538407 21.9526 0.928931 22.3431L7.29289 28.7071ZM7 -4.37114e-08L7 28L9 28L9 4.37114e-08L7 -4.37114e-08Z" fill="black"/>
                </svg>
              </div>
            </button>
            <div x-show="open" class="panel-content" aria-hidden="true" id="content-{{ loop.index }}">
              <div class="panel-inner">{{ panel.panelContent|e('wp_kses_post') }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</flynt-component>
